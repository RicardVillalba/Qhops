<div class="container">
    <div class="row">
        <div class="col-sm col col-lg dashboard-table">

                <form action='/pastQ' method='POST'>

                    <div class="formbox-date">
                        <input type='date' name='date'>
                    </div>
                    <div class="button my-5">
                        <button type='submit' class="black-button mx-1">Submit</button>
                    </div>
                </form>


            <div class="add-button">
                <a href="/add-appointment">
                    <button>add</button>
                </a>
            </div>
            <div class="dashboard-title">
                <h2>Waiting List</h2>
            </div>


            <table>
                <thead>
                    <tr>
                        <th>code</th>
                        <th>Name</th>
                        <th>Lastname</th>
                        <th>email</th>
                        <th>tags</th>
                        <th></th>
                    </tr>
                </thead>
                {{#each queue}}
                {{#each appointments}}


                <tr>
                    <td>{{this.code}}</td>
                    <td>{{this.fName}}</td>
                    <td>{{this.lName}}</td>
                    <td>{{this.email}}</td>
                    {{#each this.tags}}
                    <td>{{this}}</td>
                    {{/each}}


                    <td>
                        <div class="dashboard-buttons">
                            <a href="/dashboard/to_room/{{this._id}}">
                                <button class="btn">TO ROOM</button>
                            </a>
                            <a href="/dashboard/delete/{{this._id}}/{{this.status}}">
                                <button class="btn">DELETE</button>
                            </a>
                        </div>
                    </td>
                </tr>
                {{/each}}
                {{/each}}

            </table>





            <div class="col-sm">

                <div class="dashboard-title">
                    <h2>In Progress List</h2>
                </div>
                <table>
                    <thead>

                        <tr>
                            <th>Room</th>
                            <th>code</th>

                            <th>Name</th>
                            <th>Lastname</th>
                            <th>email</th>
                            <th>tags</th>
                            <th>Buttons</th>
                        </tr>
                    </thead>
                    {{#each queue}}

                    <tr>
                        {{#each inProgress}}
                        <td>{{this.roomId}}</td>

                        <td>{{this.code}}</td>
                        <td>{{this.fName}}</td>
                        <td>{{this.lName}}</td>
                        <td>{{this.email}}</td>
                        {{#each this.tags}}
                        <td>{{this}}</td>
                        {{/each}}


                        <td>
                            <div class="dashboard-buttons">
                                <a href="/dashboard/done/{{this._id}}">
                                    <button class="btn">DONE</button>
                                </a>
                                <a href="/dashboard/delete/{{this._id}}/{{this.status}}/{{../_id}}">
                                    <button class="btn">DELETE</button>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                    {{/each}}


                </table>

            </div>
            <div class="col-sm">

                <div class="dashboard-title">
                    <h2>Done List</h2>
                </div>
                <table>
                    <thead>

                        <tr>
                            <th>code</th>
                            <th>Name</th>
                            <th>Lastname</th>
                            <th>email</th>
                            <th>tags</th>
                            <th></th>
                        </tr>
                    </thead>
                    {{#each queue}}
                    {{#each appointments_done}}


                    <tr>
                        <td>{{this.code}}</td>
                        <td>{{this.fName}}</td>
                        <td>{{this.lName}}</td>
                        <td>{{this.email}}</td>
                        {{#each this.tags}}
                        <td>{{this}}</td>
                        {{/each}}


                        <td>
                            <a href="/dashboard/delete/{{this._id}}/{{this.status}}">
                                <button>DELETE</button>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                    {{/each}}


                </table>
            </div>
        </div>
    </div>
<br>
<div class="dashboard-table">
    <h1>DASHBOARD</h1>
    <br>
    {{#if errorMessage}}
    <div class="error-message"> {{errorMessage}} </div>
    {{/if}}


    <form action="/pastQ" method="POST">
        <label for="date">Date:</label>
        <input type="date" id="date" name="date" placeholder="">
        <input type="submit">
        <br> <br>

        <h2>Waiting List</h2>
        <br>
    </form>

    <table>
        <thead>
            <tr>
                <th>code</th>
                <th>Name</th>
                <th>Lastname</th>
                <th>email</th>
                <th>tags</th>
                <th>Buttons</th>
            </tr>
        </thead>
        {{#each queue}}
        {{#each appointments}}


        <tr>
            <td>{{this.code}}</td>
            <td>{{this.fName}}</td>
            <td>{{this.lName}}</td>
            <td>{{this.email}}</td>
            {{#each this.tags}}
            <td>{{this}}</td>
            {{/each}}


            <td>
                <a href="/dashboard/to_room/{{this._id}}">
                    <button class="btn">TO ROOM</button>
                </a>
                <a href="/dashboard/delete/{{this._id}}/{{this.status}}">
                    <button>DELETE</button>
                </a>
            </td>
        </tr>
        {{/each}}
        {{/each}}


    </table>


    <a href="/add-appointment">
        <button>add</button>
    </a>
    <br>

    <br>
    <h2>In Progress List</h2>
    <table>
        <thead>

            <tr>
                <th>Room</th>
                <th>code</th>

                <th>Name</th>
                <th>Lastname</th>
                <th>email</th>
                <th>tags</th>
                <th>Buttons</th>
            </tr>
        </thead>
        {{#each queue}}
        <tr>
            {{#each inProgress}}
            <td>{{this.roomId}}</td>
            <td>{{this.code}}</td>

            <td>{{this.fName}}</td>
            <td>{{this.lName}}</td>
            <td>{{this.email}}</td>
            {{#each this.tags}}
            <td>{{this}}</td>
            {{/each}}


            <td>
                <a href="/dashboard/done/{{this._id}}">
                    <button>DONE</button>
                </a>
                <a href="/dashboard/delete/{{this._id}}/{{this.status}}">
                    <button>DELETE</button>
                </a>
            </td>
        </tr>
        {{/each}}

        {{/each}}

        <br>


    </table>

    <br>
    <h2>Done List</h2>
    <table>
        <thead>

            <tr>
                <th>code</th>
                <th>Name</th>
                <th>Lastname</th>
                <th>email</th>
                <th>tags</th>
                <th>Buttons</th>
            </tr>
        </thead>
        {{#each queue}}
        {{#each appointments_done}}


        <tr>
            <td>{{this.code}}</td>
            <td>{{this.fName}}</td>
            <td>{{this.lName}}</td>
            <td>{{this.email}}</td>
           
            {{#each this.tags}}
            <td>{{this}}</td>
            {{/each}}
            <td>
                <a href="/dashboard/delete/{{this._id}}/{{this.status}}/">
                    <button>DELETE</button>
                </a>
            </td>

        </tr>
        
        {{/each}}
        {{/each}}

        <br>

    </table>
</div>
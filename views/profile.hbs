<div class="container">
    <div class="row justify-content-center">
        <div class="col-4 dashboard-table">
            <div class="text-center">
                {{#if admin.picture.image_url}}
                <img src="{{admin.picture.image_url}}" class="profile-img" alt="profile_picture">
                {{else}}
                <img src="https://img.icons8.com/pastel-glyph/2x/person-male.png" class="profile-img-nav"
                    alt="profile_picture">
                {{/if}}
            </div>
            <div class="text-center">
                <form action="/profile-picture" method="POST" enctype="multipart/form-data">
                    <input type="file" name="photo" id="img" style="display:none;" />
                    <label for="img" class="btn btn-dark p-1 my-2">upload image</label>
                    <button type="submit" class="btn btn-dark p-1 my-2">Update photo</button>
                </form>
            </div>
        </div>
        <div class="col-8 mt-5">

            <h3 class="text-left"> Name: {{admin.name}}</h3>
            <h3 class="text-left"> Phone: {{admin.phone}}</h3>
            <h3 class="text-left"> email: {{admin.email}}</h3>
        </div>
    </div>
</div>



<div class="py-5 container dashboard-table table-responsive">
    <caption>{{adminObj.praxis.0.organizationName}}</caption>

    <table class="table table-sm table-hover">
        <thead class='bg-light black-text'>
            <tr>
                <th class="text-center" scope="col">Rooms</th>
                <th class="text-center" scope="col">Name</th>
                <th class="text-center" scope="col">Description</th>
                <th class="text-center" scope="col">Number of spots</th>
                <th class="text-center" scope="col">Spots occupied</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="text-center"></td>
                <td class="text-center">{{room.name}}</td>
                <td class="text-center">{{room.description}}</td>
                <td class="text-center"> {{room.numSpots}}</td>
                <td class="text-center"> {{room.spotsOccupied}}</td>
                <td>

                <a href="/dashboard/to_room/{{this._id}}">
                            <button class="btn p-1">Edit</button>
                        </a>
                </td>
            </tr>

        </tbody>
    </table>
</div>
</div>